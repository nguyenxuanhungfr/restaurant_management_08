<div class="col-md-6">
  <div class="item-menu-grid-view-mixed-mqn">
    <div class="ot-portfolio-item">
      <figure class="effect-bubba">
        <%= link_to dish_path(dishes) do %>
          <%= gravatar_for_table dishes %>
        <% end %>
      </figure>
    </div>
    <div class="item-detail-text-menu-mixed">
      <h1><%= dishes.name %></h1>
      <p><%= dishes.description %></p>
      <div class="info_book">
        <h2>
          <sup></sup><%= number_format dishes.price %>
        </h2>
        <%= link_to t("add_to_booking"), root_path,
          remote: true, method: :post, class: "btn2 btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
