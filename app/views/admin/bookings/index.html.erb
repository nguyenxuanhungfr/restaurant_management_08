<%= provide :title, t("admin.list_bookings") %>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="overflow_hidden">
          <h1 class="float_left"><%= t "list_bookings" %></h1>
        </div>
        <h3 class="title">
          <strong><%= t "admin.staff.total_bookings" %></strong>
          <span class="red_color">
            <%= @bookings.total_count ||= 0 %>
          </span>
        </h3>
        <div class="nav search-row" id="top_menu">
          <%= form_tag admin_bookings_path, method: :get do %>
            <%= text_field_tag :search,
              params[:search], class: "form-control sinput",
                placeholder: t("enter_search_booking") %>
            <%= select_tag :table_id, options_for_select(@tables),
                 {class: "form-control search_statuses",include_blank: "Choose status"} %>
            <%= button_tag type: "submit", class: "btn btn-primary submit_search",
              name: nil do %>
              <%= t "Search" %>
            <% end %>
          <% end %>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>
                <%= t "admin.booking.stt" %>
              </th>
              <th>
                <%= t "admin.booking.name" %>
              </th>
              <th>
                <%= t "admin.booking.time_start" %>
              </th>
              <th>
                <%= t "admin.booking.time_end" %>
              </th>
              <th>
                <%= t "admin.booking.status" %>
              </th>
              <th>
                <%= t "admin.booking.receiver" %>
              </th>
              <th>
                <%= t "admin.booking.actions" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render "booking", bookings: @bookings %>
          </tbody>
        </table>
        <div class="margin_bottom20px float_right">
          <%= paginate @bookings, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
