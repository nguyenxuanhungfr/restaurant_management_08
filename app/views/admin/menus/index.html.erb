<%= provide :title, t("admin.menu.list_menu") %>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="overflow_hidden">
          <h1 class="float_left"><%= t "admin.menu.list_menu" %></h1>
        </div>
        <h3 class="title">
          <strong><%= t "admin.menu.total_menu" %></strong>
          <span class="red_color">
            <%= @menus.total_count ||= 0 %>
          </span>
        </h3>
        <div class="nav search-row" id="top_menu">
          <%= form_tag admin_menus_path, method: :get do %>
            <%= text_field_tag :search,
              params[:search], class: "form-control sinput",
                placeholder: t("enter_search_booking") %>
            <%= select_tag :table_id, options_for_select(@tables),
                 {class: "form-control search_statuses",include_blank: "Choose status"} %>
            <%= button_tag type: "submit", class: "btn btn-primary submit_search",
              name: nil do %>
              <%= t "Search" %>
            <% end %>
          <% end %>
        </div>
        <%= link_to t("admin.table.add_menu"), new_admin_menu_path, class: "btn btn-primary float_right" %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>
                <%= t "admin.stt" %>
              </th>
              <th>
                <%= t "admin.name" %>
              </th>
              <th>
                <%= t "admin.status" %>
              </th>
              <th>
                <%= t "admin.createdate" %>
              </th>
              <th>
                <%= t "admin.actions" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render "menu", menus: @menus %>
          </tbody>
        </table>
        <div class="margin_bottom20px float_right">
          <%= paginate @menus, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
